<h1>Add a new game for <%= @developer.name %></h1>

<%= form_with url: "/developers/#{@developer.id}/games", method: :post, local: true, class: 'add_resource_form' do |form| %>
  <%= form.label :name, "Name:" %>
  <%= form.text_field :name, required: true %><br/>
  <%= form.label :year_released, "Year Released:" %>
  <%= form.number_field :year_released, required: true %><br/>
  <%= form.label :has_multiplayer, "Multiplayer:" %>
  <%= form.check_box :has_multiplayer %><br/>
  <%= form.hidden_field :developer_id, value: @developer.id %>
  <%= form.submit "Add Game"%>
<% end %>
