<%= form_with url: "/developers/#{@developer.id}", method: :patch, local: true do |form| %>
  <%= form.label :name, 'Name:' %>
  <%= form.text_field :name, value: @developer.name %><br/>
  <%= form.label :year_founded, 'Year Founded:' %>
  <%= form.number_field :year_founded, value: @developer.year_founded %><br/>
  <%= form.label :is_indie, "Indie Studio:" %>
  <%= form.check_box :is_indie, checked: @developer.is_indie %>
  <%= form.submit "Update #{@developer.name}" %>
<% end %>
