<h1>Add a new developer</h1>

<%= form_with url: '/developers', method: :post, local: true, class: 'add_resource_form' do |form| %>
  <%= form.label :name, 'Name:' %>
  <%= form.text_field :name, required: true %><br/>
  <%= form.label :year_founded, 'Year Founded:' %>
  <%= form.number_field :year_founded, required: true %><br/>
  <%= form.label :is_indie, 'Indie Studio:' %>
  <%= form.check_box :is_indie %><br/>
  <%= form.submit 'Add Developer' %>
<% end %>
