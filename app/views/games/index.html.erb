<h1>Game Index</h1>

<%= link_to 'Add new game', '/games/new' %>

<% @games.each do |game| %>
  <div id="game_<%= game.id%>_info" class="index_info">
    <h3><%= link_to "#{game.name}", "/games/#{game.id}" %></h3>
    <p><%= button_to "Update #{game.name}", "/games/#{game.id}/edit", method: :get %></p>
    <p><%= button_to "Delete", "/games/#{game.id}", method: :delete %></p>
    <p>Developer: <%= game.dev_name %></p>
    <p>Released: <%= game.year_released %></p>
    <p>Multiplayer: <%= game.has_multiplayer %></p>
  </div>
<% end %>
