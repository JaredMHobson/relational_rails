<h1>Game Index</h1>

<nav>
<ul>
<li><a href="/">Home</a></li>
<li><a href="/developers">Developer Index</a></li>
<li><a href="/games">Game Index</a></li>
</ul>
</nav>

<% @games.each do |game| %>
<div id="game_<%= game.id%>_info">
  <h3><a href="/games/<%= game.id %>"><%= game.name %></a></h3>
  <p>Developer: <%= game.dev_name %></p>
  <p>Released: <%= game.year_released %></p>
  <p>Multiplayer: <%= game.has_multiplayer %></p>
</div>
<% end %>